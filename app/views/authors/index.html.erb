<h1>Authors</h1>

<% @authors.each do |author| %>
  <ul class="ul_no_pad">
    <li class="no-bullet">
      <%= link_to author.name,
      author_path(author),
      class: "btn btn-primary" %>
      <br>
      <% if author.start %>
        <span class="ministry">Life
          <%= author.start.strftime("%Y") %> - <%= author.end.strftime("%Y") %>
        </span>
      <% end %>
      <br>
      <% if author.start %>
        <span class="ministry">Ministry
          <%= author.start.strftime("%Y") %> - <%= author.end.strftime("%Y") %>
        </span>
      <% end %>
    </li>
    <br>
  </ul>



<% end %>
