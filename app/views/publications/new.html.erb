<h3>Add Publication</h3>

<%= form_for :publication, url: publications_path do |f| %>
  <%# render "shared/errors", object: :publication %>
  <%= f.label :name, class: "" %>
  <%= f.text_field :name, class: "form-control" %>
  <%= f.collection_select(:author_id, Author.all, :id, :name) %>

  <%= f.submit "Save Publication" %>

<% end %>
